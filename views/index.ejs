<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link
      href="http://fonts.cdnfonts.com/css/bentonsans-regular"
      rel="stylesheet"
    />
    <!--Custom CSS-->
    <link rel="stylesheet" href="style.css" />
    <title>Wise Ally</title>
  </head>
  <body>
    <div class="container text-center grid">
      <!--Top Row Starts-->
      <div class="row justify-content-center">
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
      </div>
      <!--Top Row Ends-->

      <!--Mid Row Starts-->
      <div class="row justify-content-center">
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
      </div>
      <!--Mid Row Ends-->

      <!--Bottom Row Starts-->
      <div class="row justify-content-center">
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
        <div class="show-modal col-4">
          <img src="WiseAlley_SmileyFace.png" class="img-fluid" alt="" />
        </div>
      </div>
      <!--Bottom Row Ends-->

      <!-- Question and answers here-->
      <div class="modal-question hidden" id="questionpop">
        <button class="close-modal">&times;</button>
        <!-- <% for (let i=0; i<questions.length; i++) { %> -->
        <p><%= questions[i].question %></p>
        <input type="radio" id="a1" name="answer" />
        <label for="a1"><%= questions[i].a %></label><br />
        <input type="radio" id="b1" name="answer" />
        <label for="b1"><%= questions[i].b %></label><br />
        <input type="radio" id="c1" name="answer" />
        <label for="c1"><%= questions[i].c %></label><br />
        <input type="radio" id="d1" name="answer" />
        <label for="d1"><%= questions[i].d %></label><br />
        <!-- <% } %> -->
        <!-- <a href="#" class="close-modal">Close</a> -->
      </div>
      <div class="overlay hidden"></div>
      <!-- End of Question 1 -->

      <button type="button" class="playagain btn btn-dark btn-lg">
        Play Again
      </button>
    </div>

    <script type="text/javascript" src="index.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
